@import "mixins";

@font-face {
  font-family: 'IconicStroke';
  src: url('<%= image_path 'fonts/iconic_stroke.eot' %>');
  src: url('<%= image_path 'fonts/iconic_stroke.eot' %>?#iefix') format('embedded-opentype'),
       url('<%= image_path 'fonts/iconic_stroke.ttf' %>') format('truetype'),
       url('<%= image_path 'fonts/iconic_stroke.svg' %>#iconic') format('svg');
  font-weight: normal;
  font-style: normal;
}

html, body {
  background-color: #eee;
}

table.resource-list {
  a.iconic {
    text-decoration: none;
  }
}

#time_left {
  top: 40px;
  bottom: auto;
  left: 0px;
  right: 0px;
  text-align: center;
  font-weight: bold;
  font-size: 1.25em;
}

.alert {
  position: fixed;
  bottom: 0em;
  left: 4em;
  right: 4em;
}

.iconic {
  font-family: "IconicStroke";
  display: inline-block;
}

.logged_in {
  .container > .content {
    background-color: #fff;
    padding-top: 20px;
    @include border-radius(0 0 6px 6px);
    @include box-shadow(0, 1px, 2px, rgba(0,0,0,.15));
  }
  
  .inputs {
    padding: 6px 20px 18px;
  }
}

.logged_in[data-action="index"] {
  .pagination, .page-entries {
    margin-right: 20px;
  }
  
  .page-entries {
    font-size: .8em;
    margin-top: -18px;
  }
}

.logged_in[data-action="index"], .logged_in[data-action="show"] {
  .form-actions {
    padding-left: 20px;
  }
  
  .readonly_data {
    margin-left: 20px;
  }
}