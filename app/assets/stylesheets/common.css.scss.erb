@import "mixins";

@font-face {
  font-family: 'IconicStroke';
    src: url('<%= image_path 'fonts/iconic_stroke.eot?' %>') format('embedded-opentype');
    src: local('â˜º'), /* Paul Irish Method */
         url('<%= image_path 'fonts/iconic_stroke.ttf' %>') format('truetype'),
         url('<%= image_path 'fonts/iconic_stroke.svg#iconic' %>') format('svg'),
         url('<%= image_path 'fonts/iconic_stroke.otf' %>') format('opentype');
         
  font-weight: normal;
  font-style: normal;
}

html, body {
  background-color: #eee;
}

body {
  padding-top: 40px; /* 40px to make the container go all the way to the bottom of the topbar */
}

table.resource-list {
  a.iconic {
    text-decoration: none;
  }
}

#logout {
  -webkit-transform: rotate(-90deg);
  -moz-transform: rotate(-90deg);
  -o-transform: rotate(-90deg);
  transform: rotate(-90deg);
  font-size: 1.25em;
}

.alert-message {
  position: fixed;
  bottom: 0em;
  left: 4em;
  right: 4em;
}

.iconic {
  display: inline-block;
  font-family: 'IconicStroke';
}

.logged_in {
  .container > .content {
    background-color: #fff;
    padding-top: 20px;
    @include border-radius(0 0 6px 6px);
    @include box-shadow(0, 1px, 2px, rgba(0,0,0,.15));
  }
}

.logged_in[data-action="index"] {
  .actions {
    margin-top: 72px;
  }
  
  .pagination {
    float: right;
    margin-top: 0px;
    margin-right: 20px;
  }
}

.logged_in[data-action="index"], .logged_in[data-action="show"] {
  .actions {
    padding-left: 20px;
  }
  
  .readonly_data {
    margin-left: 20px;
  }
}