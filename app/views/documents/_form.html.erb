<%= simple_form_for(@document, wrapper: :inline) do |f| %>
  <div class="inputs">
    <div class="row">
      <div class="span8">
        <%= f.input :name, input_html: { autofocus: true, maxlength: 255 } %>
        <%= f.input :code, input_html: { maxlength: 255 } %>
        <%= f.input :version, input_html: { maxlength: 5 } %>
        <%= f.input :status, collection: document_status_options, prompt: true %>
        <%= f.input :file, hint: (document_file_identifier(@document)) %>
        <%= f.input :file_cache, as: :hidden %>
      </div>
      <div class="span8">
        <%= f.input :notes, input_html: { rows: 5 } %>
        <%= f.input :version_comments, input_html: { rows: 5 } %>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= f.input :lock_version, as: :hidden %>
    <%= f.button :submit, class: 'primary' %>
    <div class="secondary-action"><%= yield :form_actions %></div>
  </div>
<% end %>
