<div class="row-fluid comment">
  <div class="span2">
    <p>
      <strong><%= User.find(f.object.originator || current_user.id) %></strong>
    </p>
  </div>
  <div class="span6">
    <%= f.input :content, label: false, input_html: {
      placeholder: Comment.human_attribute_name('content'), rows: 3, cols: 30
    } %>
  </div>
  <div class="span4">
    <%= f.input :file, label: false, hint: comment_file_identifier(f.object) %>
    <%= f.input :file_cache, as: :hidden %>
    <%= f.input :id, as: :hidden %>
    <%= f.input :lock_version, as: :hidden %>
  </div>
</div>