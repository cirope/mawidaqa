<div class="readonly_data">
  <h2><%= @document %> <span class="iconic">&#xe000;</span></h2>
  
  <p>
    <%= link_to Document.human_attribute_name('file'), @document.file_url %>
  </p>

  <p>
    <b><%= Document.human_attribute_name 'status' %>:</b>
    <%= document_status_text(@document) %>
  </p>

  <p>
    <b><%= Document.human_attribute_name 'version' %>:</b>
    <%= @document.version %>
  </p>

  <p>
    <b><%= Document.human_attribute_name 'notes' %>:</b>
  </p>
  <%= simple_format @document.notes %>

  <p>
    <b><%= Document.human_attribute_name 'version_comments' %>:</b>
  </p>
  <%= simple_format @document.version_comments %>
</div>

<nav class="actions">
  <%= link_to t('label.edit'), edit_document_path(@document), class: 'btn primary' %>
  <div class="secondary-action">
    <%= link_to t('label.list'), documents_path %>
  </div>
</nav>