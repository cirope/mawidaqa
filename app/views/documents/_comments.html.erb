<div class="row hidden-xs">
  <div class="col-md-2">
    <h5><%= Comment.human_attribute_name 'whodunnit' %></h5>
  </div>
  <div class="col-md-10">
    <h5><%= Comment.human_attribute_name 'content' %></h5>
  </div>
</div>

<% comments.each do |comment| %>
  <div class="row comment">
    <div class="col-md-2">
      <strong><%= User.find(comment.originator) rescue '-' %></strong>
    </div>
    <div class="col-md-10"><%= simple_format comment.content %></div>
  </div>
<% end %>
