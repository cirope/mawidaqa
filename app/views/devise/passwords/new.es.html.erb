<div class="row">
  <div class="public_form_container span6 offset3">
    <h3>¿Olvidaste tu contraseña?</h3>
    
    <p>
      Ingresa debajo tu dirección de correo y te enviaremos instrucciones para
      restablecerla
    </p>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div class="inputs">
        <%= f.input :email, input_html: { autofocus: true, class: 'span4' } %>
      </div>
      
      <div class="form-actions">
        <%= f.button :submit, 'Enviarme las instrucciones', class: 'btn btn-primary' %>
        <%= render partial: 'devise/shared/links' %>
      </div>
    <% end %>
  </div>
</div>