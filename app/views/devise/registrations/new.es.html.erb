<div class="row">
  <div class="public_form_container span8 offset4">
    <h2>Registrarse</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), wrapper: :inline) do |f| %>
      <%= f.input :email, input_html: { autofocus: true } %>
      <%= f.input :password %>
      <%= f.input :password_confirmation %>

      <%= f.button :submit, 'Registrarse', class: 'primary' %>
    <% end %>

    <%= render partial: 'devise/shared/links' %>
  </div>
</div>