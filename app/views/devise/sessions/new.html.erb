<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="well">
      <%= simple_form_for(
        resource, as: resource_name, url: session_path(resource_name)
      ) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, input_html: { autofocus: true } %>
        <%= f.input :password %>
        <div class="checkbox">
          <%= f.check_box :remember_me %> <%= t('sessions.new.remember_me') %>
        </div>
      </div>
      <%= submit_tag t('sessions.new.log_in'), class: 'btn btn-default' %>
      <% end %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <p>
      <%= link_to(
        t('sessions.new.forgot_password'), new_password_path(resource_name)
      ) %>
    </p>
  </div>
</div>
