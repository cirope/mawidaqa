<div class="row">
  <div class="col-lg-4 col-lg-offset-4">
    <div class="well">
      <%= simple_form_for(
        resource, as: resource_name, url: session_path(resource_name)
      ) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, input_html: { autofocus: true } %>
        <%= f.input :password %>
        <%= f.input :remember_me, as: :boolean %>
      </div>
      <div class="form-actions">
        <%= submit_tag t('sessions.new.log_in'), class: 'btn btn-default' %>
      </div>
      <% end %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-lg-4 col-lg-offset-4">
    <p>
      <%= link_to(
        t('sessions.new.forgot_password'), new_password_path(resource_name)
      ) %>
    </p>
  </div>
</div>
