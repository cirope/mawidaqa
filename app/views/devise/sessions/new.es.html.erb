<div class="row">
  <div class="public_form_container span4 offset4">
    <h3>Inicio de sesi√≥n</h3>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="inputs">
        <%= f.input :email, input_html: { autofocus: true, class: 'span3' } %>
        <%= f.input :password, input_html: { class: 'span3' } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
    
      <div class="form-actions">
        <%= f.button :submit, 'Ingresar', class: 'btn btn-primary' %>
        <%= render partial: 'devise/shared/links' %>
      </div>
    <% end %>
  </div>
</div>