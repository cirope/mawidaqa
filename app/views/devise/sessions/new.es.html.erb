<div class="row">
  <div class="public_form_container span8 offset4">
    <h2>Inicio de sesi√≥n</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), wrapper: :inline) do |f| %>
      <%= f.input :email, input_html: { autofocus: true } %>
      <%= f.input :password %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      <div class="actions">
        <%= f.button :submit, 'Ingresar', class: 'primary' %>
        <%= render partial: 'devise/shared/links' %>
      </div>
    <% end %>
  </div>
</div>