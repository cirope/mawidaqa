<div class="row">
  <div class="span4 hidden-phone">
    &nbsp;
  </div>
  <div class="public_form_container span5">
    <h3>Enviar instrucciones de desbloqueo</h3>

    <div class="row-fluid">
      <div class="span12">
        <%= simple_form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, input_html: { autofocus: true, class: 'span12' } %>
          </div>

          <div class="form-actions">
            <%= render partial: 'shared/hidden_submit', locals: { f: f } %>
            <%= show_button_dropdown(
              link_to('Enviar instrucciones', '#', class: 'btn btn-primary submit'),
              devise_links_es
            ) %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
