<div class="topbar">
  <div class="fill">
    <div class="container">
      <%= link_to t('app_name'), root_path, class: 'brand' %>
      <ul class="nav">
        <%= content_tag(
          :li, link_to(t('menu.users'), users_path),
          class: ('active' if controller_name == 'users')
        ) %>
        <%= content_tag(
          :li, link_to(t('menu.documents'), documents_path),
          class: ('active' if controller_name == 'documents')
        ) %>
      </ul>
      <ul class="nav secondary-nav">
        <li>
          <%= link_to(
            current_user.email, edit_profile_user_path(current_user),
            'title' => t('view.users.edit_profile'), 'data-twipsy' => true,
            'data-placement' => 'below'
          ) %>
        </li>
        <li>
          <%= link_to(
            '&#xe042;'.html_safe, destroy_user_session_path,
            'title' => t('menu.actions.logout'), 'class' => 'iconic',
            'id' => 'logout', 'data-twipsy' => true,
            'data-placement' => 'below', 'method' => :delete
          ) %>
        </li>
      </ul>
    </div>
  </div>
</div>