<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="iconic">&#xe055;</span>
      </a>
      
      <%= link_to t('app_name'), root_path, class: 'brand' %>
      
      <% if user_signed_in? %>
        <div class="nav-collapse">
          <ul class="nav">
            <%= render 'shared/menu_dropdowns/organizations' if current_user.organizations.count > 1 %>
            <%= show_menu_link(
              name: 'dashboard', controllers: 'dashboard', path: dashboard_path
            ) if current_organization %>
            <%= show_menu_link(
              name: 'users', controllers: 'users', path: users_path
            ) if can?(:read, User) && current_user.is?(:admin) && !current_organization %>
            <% if can?(:read, Document) && current_organization %>
              <%= render partial: 'shared/menu_dropdowns/documents' %>
            <% end %>
            <%= show_menu_link(
              name: 'organizations', path: organizations_path,
              controllers: ['organizations']
            ) if can?(:read, Organization) && !current_organization %>
          </ul>
          <%= render partial: 'shared/nav_search' %>
          <ul class="nav pull-right">
            <li>
              <%= link_to(
                current_user.email, edit_profile_user_path(current_user),
                title: t('view.users.edit_profile'),
                data: { 'show-tooltip' => true, 'placement' => 'bottom' }
              ) %>
            </li>
            <li>
              <%= link_to(
                '&#x2192;'.html_safe, destroy_user_session_path,
                title: t('menu.actions.logout'), class: 'iconic', id: 'logout', 
                method: :delete,
                data: { 'show-tooltip' => true, 'placement' => 'bottom' }
              ) %>
            </li>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
</div>
