<% document_controller = controller_name == 'documents' %>
<li class="dropdown<%= ' active' if document_controller %>">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
    <%= t('menu.documents') %>
    <b class="caret"></b>
  </a>
  <ul class="dropdown-menu">
    <li <%= raw 'class="active"' if document_controller && @tag.blank? %>>
      <%= link_to t('view.documents.all'), documents_path %>
    </li>
    <% unless document_tag_list.empty? %>
      <li class="divider"></li>
      <% tag_icon = content_tag(:span, nil, class: 'glyphicon glyphicon-tag') %>
      <% document_tag_list.each do |tag| %>
        <li <%= raw 'class="active"' if document_controller && @tag == tag %>>
          <%= link_to "#{tag_icon} #{h tag}".html_safe, tag_documents_path(tag) %>
        </li>
      <% end %>
    <% end %>
  </ul>
</li>
