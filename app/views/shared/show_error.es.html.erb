<div class="row">
  <div class="col-md-12">
    <section id="unexpected_error" class="alert alert-danger">
      <header>
        <h2 class="alert-heading">¡Ups! Se produjo un error inesperado</h2>
      </header>

      <p>
        Si el problema persiste, comuníquese con nosotros
        <a href="mailto:soporte@mawidaqa.com">soporte@mawidaqa.com</a>
      </p>
    </section>

    <% unless Rails.env.production? %>
      <section id="error_details">
        <header>
          <h3 class="well"><%= error.message %></h3>
        </header>

        <h4>Pila de llamadas</h4>
        <pre><%= error.backtrace.join("\n") %></pre>

        <h4>Parámetros</h4>
        <pre><%= params.try(:inspect) %></pre>
      </section>
    <% end %>
  </div>
</div>
